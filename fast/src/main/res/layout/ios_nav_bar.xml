<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="@color/iOSNavBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/nav_left_image"
        style="@style/iOSNavMeta.Button"
        android:src="@drawable/ios_nav_back"
        />

    <ImageView
        android:id="@+id/nav_right_image"
        style="@style/iOSNavMeta.Button"
        android:layout_alignParentRight="true"
        />

    <Button
        android:id="@+id/nav_right_text"
        style="@style/iOSNavMeta.Button.Text"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        />

    <TextView
        android:id="@android:id/title"
        android:textColor="@color/iOSNavTitle"
        android:textSize="22sp"
        android:singleLine="true"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>