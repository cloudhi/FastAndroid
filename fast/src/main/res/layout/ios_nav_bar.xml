<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="@color/iOSNavigationBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/nav_left_image"
        style="@style/iOSNavigation.Button"
        android:src="@drawable/ios_nav_back"
        />

    <ImageButton
        android:id="@+id/nav_right_image"
        style="@style/iOSNavigation.Button"
        android:layout_alignParentRight="true"
        />

    <Button
        android:id="@+id/nav_right_text"
        style="@style/iOSNavigation.Button.Text"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        />

    <TextView
        android:id="@android:id/title"
        android:textColor="@color/iOSNavigationTitle"
        android:textSize="22sp"
        android:singleLine="true"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ProgressBar
        android:id="@+id/progress"
        style="@android:style/Widget.ProgressBar.Inverse"
        android:layout_toRightOf="@android:id/title"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:layout_marginLeft="10dp"
        android:layout_width="20dp"
        android:layout_height="20dp"/>

</RelativeLayout>