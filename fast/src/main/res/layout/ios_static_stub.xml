<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:id="@+id/ios_label"
        style="@style/iOSInputField.Name"
        android:minWidth="80dp"
        />

    <ViewStub
        android:id="@+id/ios_stub"
        style="@style/iOSInputField.Input"
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/ios_label"
        android:background="@android:color/transparent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <View
        android:id="@+id/ios_top_divider"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        style="@style/iOSDivider"/>

    <View
        android:id="@+id/ios_bottom_divider"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        style="@style/iOSDivider"/>

    <View
        android:id="@+id/ios_divider"
        android:layout_alignParentBottom="true"
        style="@style/iOSTableDivider"/>

</RelativeLayout>