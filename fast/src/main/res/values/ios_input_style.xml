<?xml version="1.0" encoding="utf-8"?>
<resources>

    <color name="iOSInputText.Normal">#252525</color>
    <color name="iOSInputText.Hint">#585858</color>

    <style name="iOSInputField" parent="iOSCell">
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ios_cell_height</item>
    </style>

    <style name="iOSInputField.Name" parent="iOSCell.Name">
        <item name="android:textColor">@color/iOSInputText.Normal</item>
    </style>

    <style name="iOSInputField.Input" parent="iOSCell.Name">
        <item name="android:textColorHint">@color/iOSInputText.Hint</item>
    </style>

    <declare-styleable name="iOSInputField">
        <attr name="input_label" format="string" />
        <attr name="input_hint" format="string" />
    </declare-styleable>

</resources>