<?xml version="1.0" encoding="utf-8"?>
<resources>

    <color name="iOSTableBackground">#EFEFF4</color>
    <color name="iOSTableCellNormal">#FFFFFF</color>
    <color name="iOSTableCellSelected">#E5E5E5</color>

    <color name="iOSTableCellText.Normal">#323232</color>
    <color name="iOSTableCellText.Disabled">#6E6E6E</color>

    <style name="iOSDivider">
        <item name="android:background">@color/iOSDivider</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
    </style>

    <style name="iOSTableDivider" parent="iOSDivider">
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <style name="iOSTableCell" parent="iOSCell">
        <item name="android:background">@drawable/ios_table_cell</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="iOSTableCell.Name" parent="iOSCell.Name">
        <item name="android:textColor">@color/iOSTableCellText.Normal</item>
    </style>

    <style name="iOSTableCell.Value" parent="iOSTableCell.Name">
        <item name="android:textColor">@color/iOSTableCellText.Disabled</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:gravity">right</item>
    </style>

    <declare-styleable name="iOSTableStaticCell">
        <attr name="cellIcon" format="reference" />
        <attr name="cellLabel" format="string|reference" />
        <attr name="cellValue" format="string|reference" />
        <attr name="cellDisabledNext" format="boolean" />
    </declare-styleable>

</resources>