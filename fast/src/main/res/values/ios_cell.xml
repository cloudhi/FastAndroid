<?xml version="1.0" encoding="utf-8"?>
<resources>

    <dimen name="ios_cell_height">50dp</dimen>

    <style name="iOSCell">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ios_cell_height</item>
    </style>

    <style name="iOSCell.Name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="iOSCell.Icon">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:clickable">false</item>
    </style>

    <declare-styleable name="iOSCell">
        <attr name="first" format="boolean" />
        <attr name="last" format="boolean" />
    </declare-styleable>

</resources>