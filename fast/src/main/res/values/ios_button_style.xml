<?xml version="1.0" encoding="utf-8"?>
<resources>

    <dimen name="iOSButtonRadius">6px</dimen>

    <color name="iOSButton.Blue.Normal">#007AFF</color>
    <color name="iOSButton.Blue.Selected">#004AAB</color>

    <color name="iOSButton.Green.Normal">#39C179</color>
    <color name="iOSButton.Green.Selected">#23B166</color>

    <color name="iOSButton.Red.Normal">#DD524D</color>
    <color name="iOSButton.Red.Selected">#DB4557</color>

    <color name="iOSButton.Gray.Normal">#CCCCCC</color>
    <color name="iOSButton.Gray.Selected">#ABABAB</color>

    <color name="iOSButton.Text.Outlined">#252525</color>
    <color name="iOSButton.Text">#FFFFFF</color>

    <style name="iOSButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/iOSButton.Text</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="iOSButton.Outlined" parent="iOSButton">
        <item name="android:textColor">@color/iOSButton.Text.Outlined</item>
    </style>

    <style name="iOSButton.Blue" parent="iOSButton">
        <item name="android:background">@drawable/ios_button_blue</item>
    </style>

    <style name="iOSButton.Blue.Outlined" parent="iOSButton.Outlined">
        <item name="android:background">@drawable/ios_button_blue_outlined</item>
    </style>

    <style name="iOSButton.Green" parent="iOSButton">
        <item name="android:background">@drawable/ios_button_green</item>
    </style>

    <style name="iOSButton.Green.Outlined" parent="iOSButton.Outlined">
        <item name="android:background">@drawable/ios_button_green_outlined</item>
    </style>

    <style name="iOSButton.Red" parent="iOSButton">
        <item name="android:background">@drawable/ios_button_red</item>
    </style>

    <style name="iOSButton.Red.Outlined" parent="iOSButton.Outlined">
        <item name="android:background">@drawable/ios_button_red_outlined</item>
    </style>

</resources>